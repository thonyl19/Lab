    $(() => {
        const v = new Vue({
            el: '#app',
            data() {
                return {
                    //
                    CurrentLot: {
                        LOT: '201-20121129-33'
                    },
                    options: [],
                    reason: [],

                    description: "",
                    exec_disabled: true,
                    HoldInfoList: [],
                    isEmptyRow: true,
                    List_Lot: [
                        { seat_code: '0301' },
                        { seat_code: '0302' }
                    ],
                    dialogTableVisible: false,
                    boxinfo: {
                        Cols: 30,
                        ColType: 0,
                        Rows: 30,
                        RowType: 0,
                        orderType: 0,
                        AxisVisable: true,

                        Lists: [],
                        Lists_x: {},
                        axis: {
                            x: [],
                            y: []
                        },
                        charArr: Array.from("ABCDEFGHIJKLMNOPQRESTUVWXYZ"),
                        selected: {}
                    }

                }
            },
            methods: {
                Exec() { },
                ClearList() { }
            },
        })
    })
</script>
