@{
    ViewBag.Title = "盒具資訊維護";
    //
}
<h3>
    @ViewBag.Title
    <small></small>
</h3>

<form id="app">
    <div class="toolbar">
        <el-button type="primary" class="btn"
                   icon="el-icon-caret-right"
                   :disabled="exec_disabled"
                   v-on:click="Exec">
            @RES.BLL.Face.FunctionBarOKButton
        </el-button>

        <el-button type="primary" class="btn" icon="el-icon-search">搜索</el-button>
    </div>
    <el-table :data="List_Lot" class="lot-list"
              empty-text=" "
              style="width: 100% ">
        <el-table-column width="90" fixed>
            <template slot-scope="scope">
                <button class="btn btn-default btn-sm" >
                    <i class="fa fa-2x  fa-search fa-fw"></i>
                </button>
            </template>
        </el-table-column>
        <el-table-column label="盒具代碼" width="120" prop="seat_code"></el-table-column>
        <el-table-column label="盒具別名" width="120" prop="seat_code"></el-table-column>
        <el-table-column label="盒具欄數" width="120" prop="seat_code"></el-table-column>
        <el-table-column label="盒具列數" width="120" prop="seat_code"></el-table-column>
        <el-table-column label="備註" prop="seat_code"></el-table-column>
    </el-table>
    <el-dialog title="盒具資料設定"
               :append-to-body="true"
               :visible.sync="dialogTableVisible"
               width="100%"
               fullscreen="true"
               class="vue-boxinfoview">
        <div class="panel b">
            <div class="panel-body row">

            </div>
        </div>
    </el-dialog>
</form>





